<section class="show">
  <div class="container">
    <h3>Deal Details</h3>
    <div class="row">
      <div class="four columns tile">
        <div class="tile-image" style="background-image: url('/images/burgers/<%= @deal.burger.photo_url %>');"></div>
      </div>
      <div class="four columns ">
        <div class="deal details">
          <h4><%= @deal.name %></h4> 
          <h5><%= @deal.discount.name %></h5> 
          <h5><a href="restaurants/<%= @deal.restaurant.id %>"> <%= @deal.restaurant.name %> </a> </h5>

          <h6 class="margin_top"><%= @deal.burger.name %></h6> 
          <p class="muted"><del>£<%= @deal.burger.price %></del></p>
          <p class="final-price">£<%= @deal.final_price %></p>
          
          <div class="deal burgers">
            <h5>Burgers included:</h5>
            <% @deal.burgers.each do |burger| %>
            <p><a href="/burgers/<%= burger.id %>"><%= burger.name %></a></p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="four columns">
        <div class="deal details">
          <h4>Restaurant Details</h4>
          <h6><%= @deal.restaurant.name %></h6>
          <p><%= @deal.restaurant.address %></p>
          <p><a href="tel:<%= @deal.restaurant.tel %>"><%= @deal.restaurant.tel %></a></p>
          <p><a href="mailto:<%= @deal.restaurant.email %>"><%= @deal.restaurant.email %></a></p>
          <div class="restaurant-bio four columns">
            <h6>Description: </h6>
            <p><%= @deal.restaurant.bio %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <h3>Burgers included in this deal</h3>
      <% @deal.burgers.each do |burger| %>
      <a href="/burgers/<%= burger.id %>">
        <div class="three columns tile">
          <div class="tile-image" style="background-image: url('/images/burgers/<%= burger.photo_url %>');"></div>
          <div class="tile-overlay">
            <h4><%= burger.name %></h4>
            <h5><%= burger.restaurant.name %></h5>
            <p class="muted"><del>£<%= burger.price %></del></p>
            <p class="final-price">£<%= @deal.discount.type == 'percentage'? sprintf('%.2f', (burger.price * @deal.discount.multiplier)) : sprintf('%.2f', (burger.price - @deal.discount.multiplier)) %></p>
          </div>
        </div>
      </a>
      <% end %>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <h3>All deals at <%= @deal.restaurant.name %></h3>
    <div class="row">
      <% @deal.restaurant.deals.each do |deal| %>
      <a href="/deals/<%= deal.id %>">
        <div class="three columns tile">
          <div class="tile-image" style="background-image: url('/images/burgers/<%= deal.burger.photo_url %>');"></div>
          <div class="tile-overlay">
            <h4><%= deal.name %></h4>
            <h5><%= deal.restaurant.name %></h5>
            <p class="muted"><del>£<%= deal.burger.price %></del></p>
            <p class="final-price">£<%= deal.final_price %></p>          
          </div>
        </div>
      </a>
      <% end %>
    </div>
  </div>
</section>