<main class="display"> 
  <div class="container">
    <form class="offset-by-two eight columns" method="post" action="/admin/deals">
      <h3>Add Burger</h3>
      <div class="row">
        <div class="six columns">
          <div class="form-group">
            <label for="deal_name">Deal Name</label>
            <select id="deal_select" name="id">
              <% @deals.each do |deal| %>
              <option value ="<%= deal.id %>" >
                <%= deal.name %>
              </option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="six columns">
          <div class="form-group">
            <label for="burger_name">Burger Name</label>
            <select id="burger_select" name="burger_id">
              <% @burgers.each do |burger| %>
              <option value ="<%= burger.id %>" >
                <%= burger.restaurant.name %> - <%= burger.name %>
              </option>
              <% end %>
            </select>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="three columns offset-by-three">
          <div class="form-group">
            <input type="submit" name="submit" value="Submit" class="button button-primary">
          </div>
        </div>
        <div class="three columns">
          <div class="form-group">
            <a class="button" href="/admin/deals">Cancel</a>
          </div>
        </div>
      </div>
      

    </form> 
  </div>
</main>

